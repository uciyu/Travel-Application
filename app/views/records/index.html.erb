<div class="container pt-3">
  <h1 class="text-2xl font-bold text-center">記録一覧</h1>
<!-- 検索フォームを作る -->
  <%= form_tag({controller:"records", action:"index"}, method: :get) do %>
    <%= select_tag :search, options_for_select(Prefecture.all.pluck(:name, :id)), { prompt: '都道府県を選択' } %> 
    <%= submit_tag "都道府県で検索", class: "button" %>
  <% end %>
  <%= link_to "新規作成", new_record_path, class: "text-black hover:text-orange-600" %>
  <!-- 掲示板一覧 -->
  <div class="mt-5">
    <% if @records.present? %>
      <%= render @records %>
    <% else %>
      <div class="mb-3 text-center">記録がありません</div>
    <% end %>
  </div>
</div>
