<div class="container pt-3">
  <div class="flex justify-center">
    <div class="w-full max-w-lg">
      <!-- 検索フォーム -->
      <form>
        <div class="mb-3 flex">
          <input class="form-control w-full border rounded-md p-2" placeholder="検索ワード" type="search"/>
          <div class="ml-2">
            <input type="submit" value="検索" class="btn btn-primary bg-blue-500 text-white rounded-md p-2"/>
          </div>
        </div>
      </form>
    </div>
  </div>
  <%= link_to "新規作成", new_record_path %>
  <!-- 掲示板一覧 -->
  <div class="mt-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% if @records.present? %>
        <%= render @records %>
      <% else %>
        <div class="mb-3 text-center">記録がありません</div>
      <% end %>
    </div>
  </div>
</div>