<div class="container pt-3">
  <h1 class="text-2xl font-bold text-center">記録一覧</h1>
<!-- 検索フォームを作る -->
  <%= form_tag({controller:"records", action:"index"}, method: :get) do %>
    <%= select_tag :search, options_for_select(Prefecture.all.pluck(:name, :id)) %> 
    <%= submit_tag "都道府県で検索", class: "text-gray-1000 hover:text-blue-500" %>
  <% end %>

    <%= link_to "新規作成", new_record_path, class: "text-gray-1000 hover:text-blue-500" %>
    <!-- 掲示板一覧 -->
    <div class="mt-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% if @records.present? %>
          <%= render @records %>
        <% else %>
          <div class="mb-3 text-center">記録がありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
