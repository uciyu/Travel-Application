<!--掲示板作成画面-->
<div class="container mx-auto">
  <div class="flex justify-center">
    <div class="w-full max-w-md">
      <h1 class="text-2xl font-bold text-center">記録作成</h1>
      <%= form_with model: @record, class: "new_record" do |form| %>
        <div class="mb-4">
          <%= form.label :title , class: "block text-sm font-medium text-gray-700"%>
          <%= form.text_field :title, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:outline-none focus:ring focus:ring-blue-500" %>
        </div>
        <div class="mb-4">
          <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :body, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:outline-none focus:ring focus:ring-blue-500", rows: "10" %>
        </div>
        <%= form.submit "送信", class: "w-full bg-blue-500 text-white font-bold py-2 rounded-md hover:bg-blue-600" %>
      <% end %>
    </div>
  </div>
</div>
